---
import HTMLIcon from "./icons/HTMLIcon.astro";
import CssIcon from "./icons/CssIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";

const TAGS = {
    HTML : {
        name: "HTML5",
        class: "bg-black text-orange-200",
        icon: HTMLIcon
    },
    CSS : {
        name: "CSS",
        class: "bg-black text-blue-200",
        icon: CssIcon
    },
    JavaScript : {
        name: "JavaScript",
        class: "bg-black text-yellow-200",
        icon: JavaScriptIcon
    },
    React : {
        name: "React",
        class: "bg-black text-sky-200",
        icon: ReactIcon
    },
}

const PROJECTS = [
    {
        title: 'MedoriApp',
        description: 'Desarrollo de un sistema integral de ventas de ropa, diseñado para optimizar y mejorar la gestión de procesos comerciales en el ámbito de la moda.',
        link: '#',
        github: "https://github.com/JosephOmar/MedoriApp",
        image: '/projects/svgl.webp',
        tags: [TAGS.HTML,TAGS.CSS,TAGS.JavaScript,TAGS.React]
    }
]
---

{
    PROJECTS.map(({ title, description, tags, image,github}) => (
        <article>
            <a href={github} class="text-2xl font-semibold text-yellow-200 mb-2" target="_blank">{title}</a>    
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-4 flex-row pb-2">
                {
                    tags.map(tag => (
                        <li>
                            <span
                                class={`flex gap-x-2 rounded-full text-xs ${tag.class}  py-1 px-2`}
                            >
                                <tag.icon class="size-4"/>
                                {tag.name}
                            </span>
                        </li>
                    ))
                }
            </ul>
            <img 
            class="rounded shadow-2xl shadow-white/10"
                src={image} 
                alt={`Captura de pantalla del proyecto ${image}`}>
        </article>
    ))
}